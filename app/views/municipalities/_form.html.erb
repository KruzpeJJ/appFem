<div class="row" id="FormMun">
  <div class="col-xs-12 center-xs">
    <div class="box">
      <h1><%= name%>Municipio</h1>
    </div>
  </div>
  <div class="col-xs-12 center-xs caj" >
    <div class="box">
      <%= form_for @municipality do |f| %>
        <div class="field">
          <%= f.text_field :nombre , placeholder: "Nombre del municipio", class: "text"  %>
        </div>
        <div class="actions">

          <%= f.submit mod+"Municipio", class: "button" %>
        </div>
      <% end %>
      <% if @municipality.errors.any? %>
        <div class="error_explanation">
          <h2>
            <%= pluralize(@municipality.errors.count, "error") %>
            provocaron que no se guardara el municipio
          </h2>
           <ul>
           <% @municipality.errors.full_messages.each do |msg| %>
             <li>
             <%= msg %>
             </li>
           <%end %>
           </ul>
        </div>
      <% end %>
    </div>
  </div>
</div>
